# Enable case-insensitive tab completion.
set completion-ignore-case on

# If more than one completion is possible, then list all matches immediately.
set show-all-if-ambiguous on

# Adds punctuation as word delimiters, and make Ctrl + W kill word until last
# punctuation mark.
set bind-tty-special-chars off
"\C-w": backward-kill-word

# Completed names which are symlinks to directories will have a slash appended.
set mark-symlinked-directories on

# Make up/down arrows and Ctrl+P/N search forward/backward through history.
"\e[A": history-search-backward
"\e[B": history-search-forward
"\C-p": history-search-backward
"\C-n": history-search-forward
