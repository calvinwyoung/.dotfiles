! Xterm
xterm*geometry: 85x35
xterm*faceName: Dejavu Sans Mono:pixelsize=11:antialias=true:hinting:true
xterm*dynamicColors: true
xterm*saveLines: 5000
xterm*scrollBar: false
! Enable asynchronous scrolling
xterm*multiScroll: true
! Allow xterm to scroll by more than one line at a time
xterm*jumpScroll: true
! Don't automatically scroll to the bottom of the buffer on new output
xterm*scrollTtyOutput: false
! Enable Alt + [key] shortcuts
xterm*metaSendsEscape: true

! Shift + up/down: scroll the buffer
! Ctrl + v: paste from X clipboard
! Shift + mouse select: copy to the X clipboard
xterm*VT100.Translations: #override \
    Shift <Key>Up: scroll-back(1) \n\
    Shift <Key>Down: scroll-forw(1) \n\
    Ctrl <Key>V: insert-selection(CLIPBOARD) \n\
    Shift <Btn1Up>: select-end(CLIPBOARD, CUT_BUFFER1)

! Xft
Xft.dpi: 96
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault

! Emacs
emacs.font: Monospace 8
emacs.geometry: 84x45
emacs.toolBar: false
emacs.menuBar: false
emacs.verticalScrollBars: false

! Color theme
*background: #141414
*foreground: #ffffff

